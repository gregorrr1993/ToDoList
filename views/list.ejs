<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">

        <% newListItems.forEach(newListItem=> { %>
            <form action="/delete"  method="post">
                <div class="item">
                    <input type="checkbox" name="delete" onchange="this.form.submit()" value=<%=newListItem._id%>>
                    <p>
                        <%= newListItem.name %>
                    </p>
                </div>
                <input type="hidden" name="list" value="<%=listTitle%>"></input>
            </form>
        <% }) %>

        <form class="item" action="/" method="post">
            <input name="newItem" type="text" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%=listTitle%>">+</button>
        </form>

    </div>

    <%- include("footer") -%>